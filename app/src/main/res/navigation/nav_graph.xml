<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/miHome">

    <fragment
        android:id="@+id/miChooseType"
        android:name="ge.bootcamp.travel19.ui.fragments.choose_type.ChooseTypeFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_choose_type" >
        <action
            android:id="@+id/action_miChooseType_to_miSearchCountry"
            app:popUpTo="@id/miChooseType"
            app:popUpToInclusive="false"
            app:destination="@id/miSearchCountry" />
    </fragment>
    <fragment
        android:id="@+id/miHome"
        android:name="ge.bootcamp.travel19.ui.fragments.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
    </fragment>

    <fragment
        android:id="@+id/miProfile"
        android:name="ge.bootcamp.travel19.ui.fragments.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/miSettings"
        android:name="ge.bootcamp.travel19.ui.fragments.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/miSearchCountry"
        android:name="ge.bootcamp.travel19.ui.fragments.search_country.SearchCountryFragment"
        android:label="fragment_search_country"
        tools:layout="@layout/fragment_search_country" >
        <action
            android:id="@+id/action_miSearchCountry_to_miCountryRestrictions"
            app:popUpTo="@id/miSearchCountry"
            app:popUpToInclusive="true"
            app:destination="@id/miCountryRestrictions" />
    </fragment>
    <fragment
        android:id="@+id/miCountryRestrictions"
        android:name="ge.bootcamp.travel19.ui.fragments.country_restrictions.CountryRestrictionsFragment"
        android:label="fragment_country_restrictions"
        tools:layout="@layout/fragment_country_restrictions" >
        <argument
            android:name="selected_country"
            app:argType="ge.bootcamp.travel19.model.countries.Countries"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>