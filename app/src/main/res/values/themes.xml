<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Travel19" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/accent_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize25Percent" parent="Theme.Travel19">
        <item name="cornerSize">25%</item>
    </style>

    <style name="Travel19.Splash" parent="Theme.SplashScreen">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/accent_dark</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_kotlin_animated</item>
        <item name="windowSplashScreenAnimationDuration">@integer/icon_animator_duration</item>
        <item name="windowSplashScreenBackground">@color/accent_dark</item>
        <item name="postSplashScreenTheme">@style/Theme.Travel19</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="Theme.Travel19">
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>
    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
<!--        <item name="cornerFamilyTopRight">cut</item>-->
<!--        <item name="cornerFamilyBottomRight">cut</item>-->
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

</resources>